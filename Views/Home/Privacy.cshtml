@{
    ViewData["Title"] = "Purchase";
}


@section scripts {

    <script src="~/lib/angular.js/angular.js"></script>
    @*<script src="~/js/site.js"></script>*@
    <script type="text/javascript">
        angular.module("MainModule", ['ngRoute']);
    </script>
    <script src="~/js/Main.Js"></script>
    <script src="~/js/BranchController.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>
}

<form>

    <div class="container container-fluid" ng-app="MainModule" ng-controller="PurchaseCtrl">
        Enter Purchase Name: <input type="text" ng-model="subjectName">
        <div class="table table-responsive col-xs-12">
            <table id="myTable" class="table table-bordered table-striped table-hover table-sm">
                <thead>
                    <tr>
                        <th>Purchase ID</th>
                        <th> Name</th>
                        <th> Price</th>
                        <th>Quantity</th>
                        <th>Action</th>
                    </tr>

                    @*<p>
                        Username:<br>
                        <input type="text" name="username" ng-model="username" required>
                        <span style="color:red" ng-show="intellipaatForm.username.$dirty && intellipaatForm.username.$invalid">
                            <span ng-show="intellipaatForm.username.$error.required">Username is required.</span>
                        </span>
                    </p>
                    <p>
                        Email:<br>
                        <input type="email" name="email" ng-model="email" required>
                        <span style="color:red" ng-show="intellipaatForm.email.$dirty && intellipaatForm.email.$invalid">
                            <span ng-show="intellipaatForm.email.$error.required">Email is required.</span>
                            <span ng-show="intellipaatForm.email.$error.email">Invalid email address.</span>
                        </span>
                    </p>*@

                </thead>
                <tbody>
                    <tr ng-repeat="item in PurchaseList | filter: subjectName">
                        <td>{{item.ID}}</td>
                        <td>{{item.Name}}</td>
                        <td>{{item.Price}}</td>
                        <td>{{item.Quantity}}</td>
                        <td>
                            <a href="#" class="text-info" ng-click="updateStart(item)"><i class="glyphicon glyphicon-check">Edit</i></a>
                            <a href="#" class="text-danger" ng-click="deleteInformation(item)"><i class="glyphicon glyphicon-trash">Delete</i></a>
                        </td>
                    </tr>

                    <tr>
                        <td><input type="text" readonly class="alert alert-info" style="width: 90%; height : 90%;" ng-model="branchInfo.branchID" /></td>
                        <td><input type="text" class="alert alert-info" style="width: 90%; height : 90%;" ng-model="branchInfo.branchName" /></td>
                        <td><input type="text" class="alert alert-info" style="width: 90%; height : 90%;" ng-model="branchInfo.branchLocation" /></td>
                        <td><input type="text" class="alert alert-info" style="width: 90%; height : 90%;" ng-model="branchInfo.division" /></td>
                        <td>
                            <button class="btn btn-success" ng-hide="branchInfo.branchID" ng-click="branchInsert(branchInfo)"><i class="glyphicon glyphicon-cloud-download"></i>Create</button>
                            <button class="btn btn-success" ng-show="branchInfo.branchID" ng-click="updateConfirm(branchInfo)"><i class="glyphicon glyphicon-refresh"></i>Update</button>
                            <button class="btn btn-success" ng-show="branchInfo.branchID" ng-click="cancel()"><i class="glyphicon glyphicon-remove-sign"></i>Cancel</button>
                        </td>

                </tbody>
            </table>
        </div>
    </div>
</form>
